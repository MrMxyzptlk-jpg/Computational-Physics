&physical
    ensemble            = 'NVE'         ! Options: 'NVE', 'NVT'  -- Only 'NVT' in Monte-Carlo
    structure           = 'FCC'         ! Options: 'FCC', 'BCC', 'random', 'fromfile'
    lattice_constant    = 6.8399        ! This parameter is ignored if density is specified
    cell_dim            = 3,3,3
    num_atoms           = 108
    ref_Temp            = 0.3224        ! In units of delta/Kb
    density             = 1.0           ! Number of atoms/volume
    reduced_viscosity   = 2.87          ! REDUCED viscosity (only for BD)
    mass                = 1             ! In a.m.u.
/

&calculation
    state              = 'fromScratch'  ! Options: 'fromScratch', 'fromFile'
    dt                 = 0.001          ! In units of [ℏ/Eh = tₐ]
    real_steps         = 25000
    transitory_steps   = 25000
    thermostat_steps   = 500            ! Rescales every 50 steps the thermostat is applied
    radius_cutoff      = 2.5            ! In Bohr
    summation          = 'linked-lists' ! Options: 'all-vs-all', 'linked-lists', 'Ewald'
    dim_linkCell       = 3,3,3
    measuring_jump     = 100
    initial_velocities = 'Maxwell'       ! Options: 'random', 'Maxwell', 'fromfile'
/

&tasks
    save_state               = true
    save_transitory          = true
    save_observables         = true
    save_positions           = false
    do_pair_correlation      = true
    do_structure_factor      = false
    do_mean_sqr_displacement = false
    Miller_index             = 0,-1,0
/

&approximation
    integrator   = 'velocity-Verlet'    ! Options: 'velocity-Verlet', 'Brownian', 'Monte-Carlo'
    interactions = 'Coulomb'            ! Options: 'lennard-jones', 'Coulomb'
    sigma        = 0.5                  ! In Bohr
    delta        = 1                    ! In hartree
    kgrid        = 6,6,6                ! Reciprocal space grid
    MC_delta        = 0.1
    MC_deltaMax     = 0.5
    MC_deltaMin     = 0.01
    MC_acceptance_rate  = 0.5
/

&thermostat
    thermostat_type = 'rescale'         ! Options: 'rescale', 'Berendsen'
    Berendsen_time  = 0.01              ! In units of [ℏ/Eh = tₐ]
/

&MSD
    max_correlation  = 1000
/

&pair_correlation
    pair_corr_cutoff = 3.0              ! In Bohr
    pair_corr_bins   = 200
/
